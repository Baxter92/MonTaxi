<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context=".SignInActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/signinprocess"
        android:layout_weight="1.5"/>


</LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_xsignin"
        android:layout_height="@dimen/card_xsignin"
        android:background="@color/white"
        android:layout_marginRight="100dp"
        app:cardCornerRadius="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_in_xsignin"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#393939"
                android:lineSpacingExtra="1.7sp"
                android:text="@string/hi_label"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="52dp"
                android:src="@drawable/mon_taxi"
                />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/groupe_1700"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:weightSum="4"
                android:layout_marginTop="7dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".9"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_weight="0.3" />

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:hint="@string/phone_label"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:textColor="#393939"
                        android:maxLines="1"
                        android:singleLine="true" />
                </LinearLayout>


                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".9"
                        android:hint="@string/phone_label"
                        android:inputType="phone"
                        android:textSize="15sp"
                        android:textColor="#393939"
                        android:maxLines="1"
                        android:drawablePadding="21dip"
                        android:drawableLeft="@drawable/smartphone_3"
                        android:drawableRight="@drawable/circle_grey_2"
                        android:singleLine="true" />


                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".9"
                        android:hint="@string/pwd_label"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        android:textColor="#393939"
                        android:maxLines="1"
                        android:drawablePadding="21dip"
                        android:drawableLeft="@drawable/lock_3"
                        android:drawableRight="@drawable/circle_grey_2"
                        android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    android:layout_weight="1.3">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end">
                        <RelativeLayout
                            android:id="@+id/flashmessage"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/flash_message">
                            <TextView
                                android:id="@+id/flashmessage_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:lineSpacingExtra="1.5sp"
                                android:text="Forgotten Password ?"
                                />
                        </RelativeLayout>
                    <TextView
                        android:id="@+id/forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="#ff0900"
                        android:lineSpacingExtra="1sp"
                        android:text="@string/forgot_label"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:visibility="gone"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:progressDrawable="@drawable/circular_progress_bar"/>
                    <Button
                        android:id="@+id/email_sign_in_button"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/btn_signin"
                        android:text="@string/signin_label"
                        android:textSize="14.5sp"
                        android:textColor="#393939" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>