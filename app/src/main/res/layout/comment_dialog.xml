<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/card_in_comment"
        android:layout_height="@dimen/card_comment"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium"
        android:weightSum="3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/laugh_icon_2"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10.3sp"
            android:textColor="#00d400"
            android:lineSpacingExtra="-0.7sp"
            android:layout_centerInParent="true"
            android:text="@string/sent_comment"
            />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/btn_primary_2"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.3sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="-0.7sp"
                android:layout_centerInParent="true"
                android:text="@string/sent_comment"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>