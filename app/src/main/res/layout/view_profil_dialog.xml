<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_xsignin"
    android:layout_height="@dimen/card_xsignin"
    android:background="@color/commentbg"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:padding="@dimen/spacing_large">

            <RelativeLayout
                android:layout_width="@dimen/spacing_xxxlarge"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxxlarge"
                android:src="@drawable/groupe_1736"
                />
            <ImageView
                android:layout_width="@dimen/spacing_xllarge"
                android:layout_height="@dimen/spacing_xllarge"
                android:src="@drawable/groupe_1720"
                android:layout_below="@+id/iv_"
                android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:textColor="#000000"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/first_name"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/country_label"
                        android:inputType="text"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:drawableLeft="@drawable/groupe_698"
                        android:drawableRight="@drawable/edit_button_1"
                        android:maxLines="1"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:textColor="#000000"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/last_name"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/country_label"
                        android:inputType="text"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:drawableLeft="@drawable/groupe_698"
                        android:drawableRight="@drawable/edit_button_1"
                        android:maxLines="1"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:textColor="#000000"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/first_name"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/country_label"
                        android:inputType="text"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:drawableLeft="@drawable/groupe_698"
                        android:drawableRight="@drawable/edit_button_1"
                        android:maxLines="1"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:textColor="#000000"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/first_name"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/country_label"
                        android:inputType="text"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:drawableLeft="@drawable/groupe_698"
                        android:drawableRight="@drawable/edit_button_1"
                        android:maxLines="1"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:textColor="#000000"
                    android:lineSpacingExtra="1sp"
                    android:text="@string/first_name"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/country_label"
                        android:inputType="text"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:drawableLeft="@drawable/groupe_698"
                        android:drawableRight="@drawable/edit_button_1"
                        android:maxLines="1"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>