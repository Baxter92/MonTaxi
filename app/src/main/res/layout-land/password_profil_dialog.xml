<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="550dp"
        android:layout_height="243dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/spacing_xxxlarge"
        android:layout_marginTop="@dimen/spacing_medium"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:padding="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/groupe_1736" />

                    <Button
                        android:layout_marginTop="8dp"
                        android:id="@+id/upload"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@+id/iv_"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:drawableEnd="@drawable/ic_add_photo"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:background="@drawable/ic_default_bg"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imv1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_lock_ss"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_toEndOf="@id/imv1"
                            android:id="@+id/tvn1"
                            android:layout_marginStart="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_medium">

                            <EditText
                                android:id="@+id/oldpassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawablePadding="@dimen/spacing_middle"
                                android:hint="@string/old_password"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="13sp"
                                android:drawableRight="@drawable/circle_grey"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/update_firstname"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:visibility="invisible"
                            android:layout_alignParentEnd="true"
                            android:adjustViewBounds="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_edit" />

                        <View
                            android:layout_below="@id/imv1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="#ccc"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imv2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_lock_ss"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_toEndOf="@id/imv2"
                            android:id="@+id/tvn2"
                            android:layout_marginStart="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_medium">

                            <EditText
                                android:id="@+id/newpassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawablePadding="@dimen/spacing_middle"
                                android:hint="@string/new_password"
                                android:inputType="textPassword"
                                android:drawableRight="@drawable/circle_grey"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="13sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/update_lastname"
                            android:layout_alignParentEnd="true"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:visibility="invisible"
                            android:padding="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_edit"/>

                        <View
                            android:layout_below="@id/imv2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="#ccc"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imv3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_lock_ss"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_toEndOf="@id/imv3"
                            android:id="@+id/tvn3"
                            android:layout_marginStart="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_medium">

                            <EditText
                                android:id="@+id/confpassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:drawablePadding="@dimen/spacing_middle"
                                android:hint="@string/conf_password"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:drawableRight="@drawable/circle_grey"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="13sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:visibility="invisible"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_edit"/>

                        <View
                            android:layout_below="@id/imv3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="4dp"
                            android:background="#ccc"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/resetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:visibility="invisible"
        android:layout_below="@+id/card"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="1sp"
        android:text="@string/forgot_label"/>
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_below="@+id/resetpwd"
        android:layout_width="@dimen/card_xsignin"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_xxxlarge"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_round_white"
            android:textSize="13sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:lineSpacingExtra="-0.7sp"
            android:text="@string/cancel"
            android:elevation="10dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_round_yellow"
            android:textSize="13sp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:lineSpacingExtra="-0.7sp"
            android:text="@string/update_label"
            android:elevation="10dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_below="@+id/ll_btn"
        android:layout_above="@+id/rl_btn"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:progressDrawable="@drawable/circular_progress_bar"/>
    <RelativeLayout
        android:id="@+id/rl_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xslarge"
        android:background="@color/bottom_card"
        android:padding="@dimen/spacing_middle"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="@dimen/spacing_large"
            android:layout_height="@dimen/spacing_large"
            android:layout_alignParentEnd="true"
            android:src="@drawable/groupe_370"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/spacing_xslarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:src="@drawable/groupe_1737"
                    android:layout_width="@dimen/spacing_xxlarge"
                    android:layout_height="@dimen/spacing_xxlarge"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginBottom="@dimen/spacing_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="1.3sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="Peter Manga"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="0.7sp"
                        android:gravity="center_horizontal"
                        android:text="Taxi's Number : CE 425"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7sp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="0.7sp"
                        android:gravity="center_horizontal"
                        android:text="Phone : +237 677805473"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:src="@drawable/groupe_709"
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="@dimen/spacing_xxlarge"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginBottom="@dimen/spacing_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="1.3sp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="Jobs completed"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/commentsent"
                        android:lineSpacingExtra="0.7sp"
                        android:gravity="center_horizontal"
                        android:text="36"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>